{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "cleanUrls": true,

  "redirects": [
    { "source": "/film",      "destination": "/scene", "permanent": true },
    { "source": "/film.html", "destination": "/scene", "permanent": true }
  ],

  "rewrites": [
    { "source": "/favicon.ico",          "destination": "/assets/favicon.png" },
    { "source": "/apple-touch-icon.png", "destination": "/assets/favicon.png" }
  ]

}

